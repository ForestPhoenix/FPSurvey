body {
    line-height: 1.42857143;
}

.survey td,th {
    padding-top: 0.2em;
    padding-bottom: 0.2em;
}

.qgroupFrame {
    padding-left: 0.5em;
}

.RadioInline {
    width: 100%;
}

.RadioTable {
    border-collapse: collapse;
    width: 100%;
}

.RadioTable td,th {
    border: 1px solid #ccc;
}

.RadioTable thead tr {
    background-color: #f0f0f6;
}

.RadioTable tbody tr:nth-child(even) {
    background-color: #f2f2f2;
}

.RadioTable input {
    width: 100%;
}

.qgroupHeader {
    font-size: 110%;
    font-weight: bold;
}

label {
    font-weight: normal;
}
